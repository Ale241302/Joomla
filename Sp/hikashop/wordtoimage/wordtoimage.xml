<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="2.5" method="upgrade" group="hikashop">
	<name>HikaShop - Cambio Imagenes Por Palabras</name>
	<hikainstall ordering="0" enable="0" report="0" />
	<creationDate>31 36 2021</creationDate>
	<version>1.0.3</version>
	<author>Obsidev</author>
	<authorEmail>dev@obsidev.com</authorEmail>
	<authorUrl>http://www.obsidev.com</authorUrl>
	<copyright>Copyright (C) 2011-2021 OBSIDEV SARL - All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<description>Cambio Palabras Especificar por Imagenes</description>
	<files>
		<filename plugin="wordtoimage">wordtoimage.php</filename>
		<filename>wordtoimage_configuration.php</filename>
	</files>
	<config>
		<fields name="params" addfieldpath="/plugins/system/wordtoimage/fields">
            <fieldset name="basic" label="Opciones de cambio de palabras por imágenes">
                <!-- Definir los campos como matrices -->
                <field
                    name="word_to_replace[]"
                    type="text"
                    label="Palabra a reemplazar"
                    description="Escribe la palabra que quieres reemplazar por una imagen."
                />
                <field
                    name="image_to_insert[]"
                    type="media"
                    label="Imagen a insertar"
                    description="Selecciona la imagen que se insertará en lugar de la palabra especificada."
                    directory="images"
                    default=""
                    preview="true"
                />
                <field
                    name="link[]"
                    type="text"
                    label="Atributo Adicional"
                    description="Inserta un link"
                />
            </fieldset>
        </fields>
	</config>
</extension>